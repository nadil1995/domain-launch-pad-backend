# ── API Server ─────────────────────────────────
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# ── Database (PostgreSQL) ─────────────────────
# For Docker Compose, use service name "postgres" as host
DATABASE_URL=postgresql://imageforge:imageforge@postgres:5432/imageforge

# ── Redis ─────────────────────────────────────
# For Docker Compose, use service name "redis" as host
REDIS_URL=redis://redis:6379

# ── JWT Auth ──────────────────────────────────
JWT_SECRET=change-me-to-a-random-secret

# ── S3 / MinIO (Object Storage) ──────────────
# For Docker Compose, use service name "minio" as host
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=imageforge
S3_REGION=us-east-1

# ── Worker ───────────────────────────────────
WORKER_CONCURRENCY=3
UPLOAD_TEMP_DIR=/tmp/imageforge-uploads

# ── Stripe ────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_METERED_PRICE_ID=price_...

# ── Email (Resend) ───────────────────────────
RESEND_API_KEY=re_...
EMAIL_FROM=ImageForge <noreply@yourdomain.com>
FRONTEND_URL=http://localhost:3000

# ── reCAPTCHA ────────────────────────────────
# Leave empty to skip reCAPTCHA in development
RECAPTCHA_SECRET_KEY=
# Set in frontend .env or docker-compose
# VITE_RECAPTCHA_SITE_KEY=6Le...
